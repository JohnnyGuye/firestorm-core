{
  "name": "@jiway/firestorm-core",
  "version": "0.4.2",
  "description": "FirestORM is an ORM around built to manipulate Firestore.",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist/**/*"
  ],
  "scripts": {
    "build-doc": "npx typedoc --options typedoc.json",
    "serve-doc": "npx http-server ./docs",
    "build": "npm run build-es6 && npm run build-es22",
    "build-es6": "tsc -p ./tsconfig.es6.json",
    "build-es22": "tsc -p ./tsconfig.esm.json",
    "pub": "npm run build && npm publish",
    "test": "jest",
    "watch": "npm-watch build",
    "watch-test": "npm-watch tests",
    "clear": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnnyGuye/firestorm-core.git"
  },
  "keywords": [
    "orm",
    "firestore"
  ],
  "author": "Quentin \"Johnny\" Guye",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JohnnyGuye/firestorm-core/issues"
  },
  "homepage": "https://github.com/JohnnyGuye/firestorm-core#readme",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "eslint": "^9.16.0",
    "globals": "^15.12.0",
    "http-server": "^14.1.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "peerDependencies": {
    "firebase": "^11.0.2",
    "rxjs": "~7.5.0"
  }
}
